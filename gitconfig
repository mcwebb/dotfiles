[user]
	email = matthewowebb@gmail.com
	name = Matthew Webb
[push]
	default = matching
[pretty]
	geerling = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[alias]
	s = status --short
	c = commit
	ca = commit -a
	cm = commit -m
	cam = commit -am
	d = diff
	dc = diff --cached
	co = checkout
	cob = checkout -b
	l = log --graph --pretty=geerling
	a = add
	ap = add --patch
	rsh = reset HEAD
[core]
	pager = less -x1,5
